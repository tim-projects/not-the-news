{
  email {$EMAIL}
  storage file_system /data
  acme_ca {$ACME_CA:https://acme-v02.api.letsencrypt.org/directory}
}

{$DOMAIN} { # <--- Ensure your domain is here
  @unauth {
    not header Cookie auth*
    not path /login.html
    # EXCLUDE ALL API ENDPOINTS FROM REDIRECTION (NOW WITH /api/ PREFIX)
    not path /api/login*
    not path /api/user-state*
    not path /api/load-config*
    not path /api/save-config*
    not path /api/time*
    not path /api/feed-guids*
    not path /api/feed-items*
    not path /api/user-state/shuffledOutGuids
    # Explicitly exclude common static assets and service worker from redirection
    not path /sw.js
    not path /js/libs/*
    not path /*.css
    not path /*.js
    not path /*.svg
    not path /*.ttf
    not path /*.woff
    not path /*.woff2
    not path /manifest.json
    not path /images/*
  }
  redir @unauth /login.html 302

  # ALL 'handle' blocks for API endpoints must now include '/api/'
  handle /api/login* {
    reverse_proxy 127.0.0.1:4575 {
      header_up X-Forwarded-Proto https
      header_up Host {host}
    }
  }

  handle /api/user-state* { # <-- UPDATED
    reverse_proxy 127.0.0.1:4575 {
      header_up X-Forwarded-Proto https
      header_up Host {host}
    }
  }
  handle /api/load-config* { # <-- UPDATED (Consider removing if Flask no longer supports it)
    reverse_proxy 127.0.0.1:4575 {
      header_up X-Forwarded-Proto https
      header_up Host {host}
    }
  }
  handle /api/save-config* { # <-- UPDATED (Consider removing if Flask no longer supports it)
    reverse_proxy 127.0.0.1:4575 {
      header_up X-Forwarded-Proto https
      header_up Host {host}
    }
  }
  handle /api/time* {
    reverse_proxy 127.0.0.1:4575 {
      header_up X-Forwarded-Proto https
      header_up Host {host}
    }
  }
  handle /api/feed-guids* {
    reverse_proxy 127.0.0.1:4575 {
      header_up X-Forwarded-Proto https
      header_up Host {host}
    }
  }

  handle /api/feed-items* {
    reverse_proxy 127.0.0.1:4575 {
      header_up X-Forwarded-Proto https
      header_up Host {host}
    }
  }

  root * /app/www
  file_server

  encode {
    br 11
    gzip 5
    match {
      header Content-Type text/html
      header Content-Type text/css
      header Content-Type application/javascript
      header Content-Type application/rss+xml
      header Content-Type application/xml
      header Content-Type text/xml
      header Content-Type application/json
    }
    minimum_length 512
  }

  @api_nocache {
    path /api/load-config* # <-- UPDATED
    path /api/save-config* # <-- UPDATED
    path /api/user-state* # <-- UPDATED
  }
  header @api_nocache {
    Cache-Control "no-cache, no-store, must-revalidate"
    Pragma "no-cache"
    Expires "0"
  }
  @feed {
    path /feed.xml
  }
  handle @feed {
    root * /data/feed
    header {
      Access-Control-Allow-Origin   *
      Access-Control-Expose-Headers ETag, Last-Modified
    }
    file_server
  }
}