{
  email {$EMAIL}
  storage file_system /data
  acme_ca {$ACME_CA:https://acme-v02.api.letsencrypt.org/directory}
}

{$DOMAIN} {
  @unauth {
    not header Cookie auth*
    not path /login.html
    not path /api/login*
    # Explicitly exclude all API endpoints from redirection
    not path /user-state*
    not path /load-config*
    not path /save-config*
    not path /time*
    not path /feed-guids*
    not path /feed-items*
    not path /sw.js
    not path /js/libs/*
    not path /*.css
    not path /*.js
    not path /*.svg
    not path /*.ttf
    not path /*.woff
    not path /*.woff2
    not path /manifest.json
    not path /images/*
  }
  redir @unauth /login.html 302 # <-- UNCOMMENT THIS LINE (if you commented it out)

  handle /api/login* {
    reverse_proxy 127.0.0.1:4575 {
      header_up X-Forwarded-Proto https
      header_up Host {host}
    }
  }

  handle /user-state* {
    reverse_proxy 127.0.0.1:4575 {
      header_up X-Forwarded-Proto https
      header_up Host {host}
    }
  }
  handle /load-config* {
    reverse_proxy 127.0.0.1:4575 {
      header_up X-Forwarded-Proto https
      header_up Host {host}
    }
  }
  handle /save-config* {
    reverse_proxy 127.0.0.1:4575 {
      header_up X-Forwarded-Proto https
      header_up Host {host}
    }
  }
  handle /time* {
    reverse_proxy 127.0.0.1:4575 {
      header_up X-Forwarded-Proto https
      header_up Host {host}
    }
  }
  handle /feed-guids* {
    reverse_proxy 127.0.0.1:4575 {
      header_up X-Forwarded-Proto https
      header_up Host {host}
    }
  }

  # --- CRITICAL CHANGE: Proxy /feed-items directly to Flask ---
  handle /feed-items* {
    reverse_proxy 127.0.0.1:4575 {
      header_up X-Forwarded-Proto https
      header_up Host {host}
    }
  }
  # Removed the old `handle /items*` since Flask now uses `/feed-items`

  root * /app/www
  file_server

  encode {
    br 11
    gzip 5
    match {
      header Content-Type text/html
      header Content-Type text/css
      header Content-Type application/javascript
      header Content-Type application/rss+xml
      header Content-Type application/xml
      header Content-Type text/xml
      header Content-Type application/json
    }
    minimum_length 512
  }

  @api_nocache {
    path /load-config*
    path /save-config*
    path /user-state*
  }
  header @api_nocache {
    Cache-Control "no-cache, no-store, must-revalidate"
    Pragma "no-cache"
    Expires "0"
  }
  @feed {
    path /feed.xml
  }
  handle @feed {
    root * /data/feed
    header {
      Access-Control-Allow-Origin   *
      Access-Control-Expose-Headers ETag, Last-Modified
    }
    file_server
  }
}