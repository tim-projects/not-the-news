server {
    server_name <your-domain>;
    listen [::]:80;
    listen 80;

    # Set root to /tmp/feed (this is required for nginx to locate the file)
    root /tmp/feed;

    # Allow access to merged_feed.xml
    location = /feed.xml {
        # Explicitly serve the file
        index feed.xml;

        # Disable caching
        add_header Cache-Control 'no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0';
        add_header Pragma 'no-cache';
        add_header Expires '0';
        etag off;

        allow all; # Allow access to this file only
    }

    # Deny access to everything else
    location / {
        deny all;
        return 403;
    }
}
